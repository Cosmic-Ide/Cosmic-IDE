{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
 		["{", "}"],
 		["[", "]"],
 		["(", ")"],
 		["<", ">"]
 	],
  "autoClosingPairs": [
 		["{", "}"],
 		["[", "]"],
 		["(", ")"],
 		["<", ">"],
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] },
    { "open": "#", "close": "\n", "notIn": ["string"] }
 	],
  "surroundingPairs": [
 		["{", "}"],
 		["[", "]"],
 		["(", ")"],
 		["\"", "\""],
 		["'", "'"],
 		["<", ">"]
 	],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*(?:(?:#?region\\b)|(?:<editor-fold\\b))",
      "end": "^\\s*//\\s*(?:(?:#?endregion\\b)|(?:</editor-fold>))"
    }
  }
}
