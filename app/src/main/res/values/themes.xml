<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.JavaIDE" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
		<item name="textAppearanceLargePopupMenu">@style/popup</item>
	</style>

	<style name="Theme.JavaIDE.NoActionBar" parent="Theme.JavaIDE">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.JavaIDE.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.JavaIDE.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<!-- PopupMenu Text Color in night mode -->
	<style name="popup" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
		<item name="android:textColor">@color/primary_text_color</item>
	</style>
</resources>